<!--
  This is template for hugo menus, accepts MenuEntity as context
  https://gohugo.io/variables/menus/
-->
{% comment %} {{ if . }}
  {{ template "book-menu-hugo" . }}
{{ end }} {% endcomment %}
<ul>
  {% if site.navigation %}
    <li  class="book-section-flat">
  <span>路线牌</span>
  <ul>
  {% for item in site.navigation %}
  <li>
    <a href="{{ item.url | absoluteUrl }}" >
      {{ item.label }}
    </a>
  </li>
  {% endfor %}
  </li>
  </ul>
  {% endif %}
</ul>





{% comment %} 
{{ define "book-menu-hugo" }}
<ul>
  {{ range . }}
  <li>
    <a href="{{ .URL }}" {{ with .Params.class }}class="{{ . }}"{{ end }} {{ if not .Page }}target="_blank" rel="noopener"{{ end }}>
      {{- .Pre -}}
      {{ with .Page }}
        {{ partial "docs/title" .Page }}
      {{ else }}
        {{ .Name }}
      {{ end }}
      {{- .Post -}}
    </a>
    {{- with .Children }}
      {{ template "book-menu-hugo" . }}
    {{- end }}
  </li>
  {{ end }}
</ul>
{{ end }} {% endcomment %}
